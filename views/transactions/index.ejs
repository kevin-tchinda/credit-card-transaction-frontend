<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Transactions - Détection de Fraude</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('../partials/header') %>

  <main class="max-w-7xl mx-auto px-4 py-8">
    <!-- En-tête -->
    <div class="mb-8">
      <div class="flex flex-col md:flex-row md:items-center justify-between">
        <div>
          <h1 class="text-2xl font-bold text-gray-800">Transactions</h1>
          <p class="text-gray-600 mt-1">Liste complète des transactions enregistrées</p>
        </div>
        
        <!-- Bouton d'ajout -->
        <div class="mt-4 md:mt-0 flex space-x-3">
          <a href="/front/transactions/create" 
             class="inline-flex items-center bg-green-600 text-white font-medium py-2.5 px-5 rounded-lg hover:bg-green-700 transition">
            <i class="fas fa-plus mr-2"></i>
            Nouvelle transaction
          </a>
          <a href="/front/analyses" 
             class="inline-flex items-center bg-blue-600 text-white font-medium py-2.5 px-5 rounded-lg hover:bg-blue-700 transition">
            <i class="fas fa-chart-line mr-2"></i>
            Voir analyses
          </a>
        </div>
      </div>

      <!-- Statistiques rapides -->
      <div class="mt-6 flex flex-wrap items-center gap-4 text-sm text-gray-500">
        <div class="flex items-center">
          <i class="fas fa-exchange-alt mr-2 text-green-500"></i>
          <span>Total : 
            <% if (Array.isArray(transactions)) { %>
              <span class="font-medium"><%= transactions.length %></span> transaction(s)
            <% } else { %>
              Chargement...
            <% } %>
          </span>
        </div>
        <div class="flex items-center">
          <i class="fas fa-file-alt mr-2 text-gray-500"></i>
          <span>Page <span class="font-medium"><%= page %></span> sur <span class="font-medium"><%= totalPages %></span></span>
        </div>
      </div>
    </div>

    <!-- Message d'erreur -->
    <% if (error) { %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <div class="flex items-center">
          <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
          <p class="text-red-700"><%= error %></p>
        </div>
      </div>
    <% } %>

    <!-- Tableau des transactions -->
    <div class="bg-white rounded-xl shadow border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                ID
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Montant
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Pays
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Statut
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Date
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Utilisateur
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% if (Array.isArray(transactions) && transactions.length > 0) { %>
              <% transactions.forEach(t => { %>
                <tr class="hover:bg-gray-50 transition">
                  <!-- ID -->
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    #<%= t.idTransaction %>
                  </td>
                  
                  <!-- Montant (CORRIGÉ : CAD) -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <div class="w-8 h-8 <%= t.montant > 1000 ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800' %> rounded-lg flex items-center justify-center mr-3">
                        <i class="fas fa-dollar-sign text-xs"></i>
                      </div>
                      <div>
                        <span class="text-sm font-medium text-gray-900">$<%= t.montant %></span>
                        <% if (t.montant > 1000) { %>
                          <span class="text-xs text-red-600 ml-2">Élevé</span>
                        <% } %>
                      </div>
                    </div>
                  </td>
                  
                  <!-- Pays -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <div class="flex items-center">
                      <i class="fas fa-globe text-gray-400 mr-2"></i>
                      <span class="text-sm text-gray-800"><%= t.paysTransaction %></span>
                    </div>
                  </td>
                  
                  <!-- Statut -->
                  <td class="px-6 py-4 whitespace-nowrap">
                    <%
                      let statusColor = 'gray';
                      let statusIcon = 'question-circle';
                      
                      if (t.statut === 'ACCEPTEE') {
                        statusColor = 'green';
                        statusIcon = 'check-circle';
                      } else if (t.statut === 'REFUSEE') {
                        statusColor = 'red';
                        statusIcon = 'times-circle';
                      } else if (t.statut === 'EN_ATTENTE') {
                        statusColor = 'yellow';
                        statusIcon = 'clock';
                      }
                    %>
                    <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-medium bg-<%= statusColor %>-100 text-<%= statusColor %>-800">
                      <i class="fas fa-<%= statusIcon %> mr-1.5"></i>
                      <%= t.statut %>
                    </span>
                  </td>
                  
                  <!-- Date -->
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <% 
                      const date = new Date(t.dateTransaction);
                      const formattedDate = date.toLocaleDateString('fr-FR', {
                        day: '2-digit',
                        month: '2-digit',
                        year: 'numeric',
                        hour: '2-digit',
                        minute: '2-digit'
                      });
                    %>
                    <div class="flex items-center">
                      <i class="fas fa-calendar text-gray-400 mr-2"></i>
                      <%= formattedDate %>
                    </div>
                  </td>
                  
                  <!-- Utilisateur -->
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <% if (t.Utilisateur) { %>
                      <div class="flex items-center">
                        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center text-blue-600 font-bold text-xs mr-3">
                          <%= t.Utilisateur.nom.charAt(0) %><%= t.Utilisateur.prenom.charAt(0) %>
                        </div>
                        <div>
                          <div class="font-medium text-gray-800"><%= t.Utilisateur.nom %> <%= t.Utilisateur.prenom %></div>
                          <div class="text-xs text-gray-500"><%= t.Utilisateur.adresseEmail %></div>
                        </div>
                      </div>
                    <% } else { %>
                      <span class="text-gray-400">N/A</span>
                    <% } %>
                  </td>
                  
                  <!-- Actions -->
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <div class="flex items-center space-x-3">
                      <!-- Bouton Voir -->
                      <a href="/front/transactions/<%= t.idTransaction %>" 
                         class="inline-flex items-center text-blue-600 hover:text-blue-800" 
                         title="Voir les détails">
                        <i class="fas fa-eye"></i>
                      </a>
                      
                      <!-- Bouton Modifier -->
                      <a href="/front/transactions/<%= t.idTransaction %>/edit" 
                         class="inline-flex items-center text-green-600 hover:text-green-800"
                         title="Modifier">
                        <i class="fas fa-edit"></i>
                      </a>
                      
                      <!-- Indicateur analyse -->
                      <a href="/front/analyses" 
                         class="inline-flex items-center text-purple-600 hover:text-purple-800"
                         title="Voir l'analyse">
                        <i class="fas fa-chart-line"></i>
                      </a>
                    </div>
                  </td>
                </tr>
              <% }) %>
            <% } else { %>
              <tr>
                <td colspan="7" class="px-6 py-12 text-center">
                  <div class="flex flex-col items-center justify-center">
                    <i class="fas fa-exchange-alt text-gray-300 text-4xl mb-4"></i>
                    <h3 class="text-lg font-medium text-gray-500">Aucune transaction trouvée</h3>
                    <p class="text-gray-400 mt-2">Commencez par créer une transaction</p>
                    <a href="/front/transactions/create" 
                       class="mt-4 inline-flex items-center text-green-600 hover:text-green-800">
                      <i class="fas fa-plus mr-2"></i>Créer une transaction
                    </a>
                  </div>
                </td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- Pagination -->
    <% if (totalPages > 1) { %>
      <div class="mt-8 flex flex-col sm:flex-row items-center justify-between">
        <div class="text-sm text-gray-500 mb-4 sm:mb-0">
          Page <span class="font-medium"><%= page %></span> sur <span class="font-medium"><%= totalPages %></span>
          • <span class="font-medium">
            <% if (Array.isArray(transactions)) { %>
              <%= transactions.length %>
            <% } else { %>
              0
            <% } %>
          </span> transaction(s) affichée(s)
        </div>
        
        <div class="flex items-center space-x-2">
          <!-- Bouton Précédent -->
          <% if (page > 1) { %>
            <a href="/front/transactions?page=<%= page - 1 %>" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
              <i class="fas fa-chevron-left mr-2"></i>Précédent
            </a>
          <% } else { %>
            <span class="inline-flex items-center px-4 py-2 border border-gray-200 rounded-lg text-sm font-medium text-gray-400 bg-gray-50 cursor-not-allowed">
              <i class="fas fa-chevron-left mr-2"></i>Précédent
            </span>
          <% } %>

          <!-- Numéros de page -->
          <div class="hidden md:flex items-center space-x-1">
            <% for (let i = 1; i <= totalPages; i++) { %>
              <% if (i === page) { %>
                <span class="px-3 py-2 bg-green-600 text-white text-sm font-medium rounded-lg">
                  <%= i %>
                </span>
              <% } else if (i === 1 || i === totalPages || (i >= page - 1 && i <= page + 1)) { %>
                <a href="/front/transactions?page=<%= i %>" 
                   class="px-3 py-2 border border-gray-300 text-gray-700 text-sm font-medium rounded-lg hover:bg-gray-50">
                  <%= i %>
                </a>
              <% } else if (i === page - 2 || i === page + 2) { %>
                <span class="px-2 text-gray-400">...</span>
              <% } %>
            <% } %>
          </div>

          <!-- Bouton Suivant -->
          <% if (page < totalPages) { %>
            <a href="/front/transactions?page=<%= page + 1 %>" 
               class="inline-flex items-center px-4 py-2 border border-gray-300 rounded-lg text-sm font-medium text-gray-700 bg-white hover:bg-gray-50">
              Suivant<i class="fas fa-chevron-right ml-2"></i>
            </a>
          <% } else { %>
            <span class="inline-flex items-center px-4 py-2 border border-gray-200 rounded-lg text-sm font-medium text-gray-400 bg-gray-50 cursor-not-allowed">
              Suivant<i class="fas fa-chevron-right ml-2"></i>
            </span>
          <% } %>
        </div>
      </div>
    <% } %>

    <!-- Navigation rapide -->
    <div class="mt-10 pt-8 border-t border-gray-200">
      <h3 class="text-lg font-semibold text-gray-800 mb-4">Navigation rapide</h3>
      <div class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        <a href="/front/dashboard" class="flex items-center p-4 bg-white border border-gray-200 rounded-lg hover:border-blue-300 hover:bg-blue-50 transition">
          <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-tachometer-alt text-blue-600"></i>
          </div>
          <div>
            <h4 class="font-medium text-gray-800">Dashboard</h4>
            <p class="text-gray-500 text-sm">Vue d'ensemble du système</p>
          </div>
        </a>
        
        <a href="/front/analyses" class="flex items-center p-4 bg-white border border-gray-200 rounded-lg hover:border-purple-300 hover:bg-purple-50 transition">
          <div class="w-10 h-10 bg-purple-100 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-chart-line text-purple-600"></i>
          </div>
          <div>
            <h4 class="font-medium text-gray-800">Analyses de fraude</h4>
            <p class="text-gray-500 text-sm">Résultats de détection</p>
          </div>
        </a>
        
        <a href="/front/utilisateurs" class="flex items-center p-4 bg-white border border-gray-200 rounded-lg hover:border-green-300 hover:bg-green-50 transition">
          <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-4">
            <i class="fas fa-users text-green-600"></i>
          </div>
          <div>
            <h4 class="font-medium text-gray-800">Gérer les utilisateurs</h4>
            <p class="text-gray-500 text-sm">Liste des comptes</p>
          </div>
        </a>
      </div>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>