<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - Détection de Fraude</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include('partials/header') %>

  <div class="max-w-7xl mx-auto px-4 py-8">
    <!-- En-tête -->
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-800 mb-2">Dashboard</h1>
      <p class="text-gray-600">Vue d'ensemble du système de détection de fraude</p>
      
      <% if (user) { %>
      <div class="mt-4 flex items-center text-sm text-gray-500">
        <i class="fas fa-user-circle mr-2"></i>
        Connecté en tant que : <span class="font-medium text-gray-700 ml-1"><%= user.email %></span>
      </div>
      <% } %>
    </div>

    <!-- Statistiques principales -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-6 mb-10">

      <!-- Utilisateurs -->
      <div class="bg-white rounded-lg border p-6 hover:shadow-md transition">
        <p class="text-gray-500 text-sm font-medium">Utilisateurs</p>
        <div class="flex items-center justify-between mt-2">
          <span class="text-3xl font-bold text-gray-800"><%= stats?.users ?? "--" %></span>
          <i class="fas fa-users text-blue-600 text-xl"></i>
        </div>
        <a href="/front/utilisateurs" class="mt-4 inline-flex items-center text-sm text-blue-600 hover:text-blue-800">
          Gérer
        </a>
      </div>

      <!-- Transactions -->
      <div class="bg-white rounded-lg border p-6 hover:shadow-md transition">
        <p class="text-gray-500 text-sm font-medium">Transactions</p>
        <div class="flex items-center justify-between mt-2">
          <span class="text-3xl font-bold text-gray-800"><%= stats?.transactions ?? "--" %></span>
          <i class="fas fa-exchange-alt text-green-600 text-xl"></i>
        </div>
        <a href="/front/transactions" class="mt-4 inline-flex items-center text-sm text-green-600 hover:text-green-800">
          Voir
        </a>
      </div>

      <!-- Analyses -->
      <div class="bg-white rounded-lg border p-6 hover:shadow-md transition">
        <p class="text-gray-500 text-sm font-medium">Analyses</p>
        <div class="flex items-center justify-between mt-2">
          <span class="text-3xl font-bold text-gray-800"><%= stats?.analyses ?? "--" %></span>
          <i class="fas fa-chart-line text-purple-600 text-xl"></i>
        </div>
        <a href="/front/analyses" class="mt-4 inline-flex items-center text-sm text-purple-600 hover:text-purple-800">
          Consulter
        </a>
      </div>

      <!-- ✅ NOUVELLE CARTE : ALERTES -->
      <div class="bg-white rounded-lg border p-6 hover:shadow-md transition">
        <p class="text-gray-500 text-sm font-medium">Alertes</p>
        <div class="flex items-center justify-between mt-2">
          <span class="text-3xl font-bold text-gray-800"><%= stats?.alertes ?? "--" %></span>
          <i class="fas fa-bell text-red-600 text-xl"></i>
        </div>
        <a href="/front/alertes" class="mt-4 inline-flex items-center text-sm text-red-600 hover:text-red-800">
          Voir
        </a>
      </div>

      <!-- Taux de fraude -->
      <div class="bg-white rounded-lg border p-6 hover:shadow-md transition">
        <p class="text-gray-500 text-sm font-medium">Taux de fraude</p>
        <div class="flex items-center justify-between mt-2">
          <span class="text-3xl font-bold text-gray-800"><%= stats?.fraudRate ?? "--%" %></span>
          <i class="fas fa-exclamation-triangle text-red-600 text-xl"></i>
        </div>
        <p class="mt-4 text-sm text-gray-500">Score ≥ 70% = fraude</p>
      </div>
    </div>

    <!-- Actions rapides -->
    <div class="bg-white rounded-lg border p-6">
      <h2 class="text-lg font-semibold text-gray-800 mb-4">
        <i class="fas fa-bolt mr-2 text-green-600"></i>Actions rapides
      </h2>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <a href="/front/transactions/create" class="flex items-center p-4 border rounded-lg hover:bg-blue-50">
          <i class="fas fa-plus text-blue-600 mr-3"></i> Créer une transaction
        </a>

        <a href="/front/utilisateurs/create" class="flex items-center p-4 border rounded-lg hover:bg-green-50">
          <i class="fas fa-user-plus text-green-600 mr-3"></i> Ajouter un utilisateur
        </a>

        <a href="/front/analyses" class="flex items-center p-4 border rounded-lg hover:bg-purple-50">
          <i class="fas fa-search text-purple-600 mr-3"></i> Voir les analyses
        </a>

        <!-- ✅ NOUVEL ACCÈS RAPIDE ALERTES -->
        <a href="/front/alertes" class="flex items-center p-4 border rounded-lg hover:bg-red-50">
          <i class="fas fa-bell text-red-600 mr-3"></i> Voir les alertes
        </a>
      </div>

      <div class="mt-8 pt-6 border-t">
        <a href="/front/logout" class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700">
          <i class="fas fa-sign-out-alt mr-2"></i>Déconnexion
        </a>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
