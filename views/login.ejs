  <%- include('partials/header') %>

  <!-- Contenu principal centré -->
  <main class="flex-1 flex items-center justify-center px-4 py-12">
    <div class="w-full max-w-md">
      <!-- Carte de connexion -->
      <div class="bg-white rounded-xl shadow-lg p-8">
        <!-- En-tête -->
        <div class="text-center mb-8">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-blue-100 rounded-full mb-4">
            <i class="fas fa-user-lock text-blue-600 text-2xl"></i>
          </div>
          <h1 class="text-2xl font-bold text-gray-800">Connexion</h1>
          <p class="text-gray-600 mt-2">Accédez à votre tableau de bord</p>
        </div>

        <!-- Formulaire -->
        <form method="POST" action="/front/login" class="space-y-6">
          <!-- Email -->
          <div>
            <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-envelope mr-2 text-gray-500"></i>Adresse email
            </label>
            <input 
              type="email" 
              id="email" 
              name="adresseEmail" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
              placeholder="exemple@email.com"
            >
          </div>

          <!-- Mot de passe -->
          <div>
            <label for="pwd" class="block text-sm font-medium text-gray-700 mb-2">
              <i class="fas fa-lock mr-2 text-gray-500"></i>Mot de passe
            </label>
            <input 
              type="password" 
              id="pwd" 
              name="motDePasse" 
              required
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
              placeholder="Votre mot de passe"
            >
          </div>

          <!-- Bouton de connexion -->
          <button 
            type="submit"
            class="w-full bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg hover:bg-blue-700 focus:ring-4 focus:ring-blue-300 transition"
          >
            <i class="fas fa-sign-in-alt mr-2"></i>Se connecter
          </button>

          <!-- Message d'erreur -->
          <% if (error) { %>
            <div class="mt-4 p-4 bg-red-50 border border-red-200 rounded-lg">
              <div class="flex items-center">
                <i class="fas fa-exclamation-circle text-red-500 mr-3"></i>
                <p class="text-red-700 text-sm"><%= error %></p>
              </div>
            </div>
          <% } %>
        </form>

        <!-- Lien vers inscription -->
        <div class="mt-8 pt-6 border-t border-gray-200 text-center">
          <p class="text-gray-600">
            Vous n'avez pas de compte ?
            <a href="/front/signup" class="text-blue-600 font-semibold hover:text-blue-800 ml-2">
              Créer un compte <i class="fas fa-arrow-right ml-1"></i>
            </a>
          </p>
        </div>

        <!-- Navigation rapide -->
        <div class="mt-8 grid grid-cols-2 gap-3">
          <a href="/front" class="text-center text-sm text-gray-500 hover:text-gray-700 p-2 hover:bg-gray-50 rounded">
            <i class="fas fa-home block text-lg mb-1"></i>
            Accueil
          </a>
          <a href="/front/dashboard" class="text-center text-sm text-gray-500 hover:text-gray-700 p-2 hover:bg-gray-50 rounded">
            <i class="fas fa-tachometer-alt block text-lg mb-1"></i>
            Dashboard
          </a>
        </div>
      </div>

      <!-- Information sur le système -->
      <div class="mt-8 text-center text-sm text-gray-500">
        <p><i class="fas fa-info-circle mr-2"></i>API - Détection de fraude</p>
        <p class="mt-1">Utilisez vos identifiants ou créez un nouveau compte</p>
      </div>
    </div>
  </main>

