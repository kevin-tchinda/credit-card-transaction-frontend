<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Détail du rôle</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include("../partials/header") %>

  <main class="max-w-4xl mx-auto px-4 py-8">

    <!-- En-tête -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Détail du rôle</h1>
        <p class="text-gray-600 mt-1">Informations du rôle sélectionné</p>
      </div>

      <a href="/front/roles"
         class="inline-flex items-center bg-gray-600 text-white px-5 py-2.5 rounded-lg hover:bg-gray-700 transition">
        <i class="fas fa-arrow-left mr-2"></i> Retour
      </a>
    </div>

    <!-- Erreur -->
    <% if (error) { %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-700"><%= error %></p>
      </div>
    <% } %>

    <!-- Carte détail -->
    <% if (role) { %>
      <div class="bg-white rounded-xl shadow border border-gray-200 p-6 space-y-4">

        <div>
          <p class="text-sm text-gray-500">ID du rôle</p>
          <p class="text-lg font-medium text-gray-800">
            #<%= role.idRole || role.id || "--" %>
          </p>
        </div>

        <div>
          <p class="text-sm text-gray-500">Nom du rôle</p>
          <p class="text-lg font-medium text-gray-800">
            <%= role.nom || role.nomRole || "Non défini" %>
          </p>
        </div>

        <!-- Actions -->
        <div class="pt-6 border-t flex space-x-4">
          <a href="/front/roles/<%= role.idRole || role.id %>/edit"
             class="inline-flex items-center bg-green-600 text-white px-5 py-2.5 rounded-lg hover:bg-green-700 transition">
            Modifier
          </a>

          <form action="/front/roles/<%= role.idRole || role.id %>/delete"
                method="POST"
                onsubmit="return confirm('Supprimer ce rôle ?');">
            <button type="submit"
                    class="inline-flex items-center bg-red-600 text-white px-5 py-2.5 rounded-lg hover:bg-red-700 transition">
              Supprimer
            </button>
          </form>
        </div>

      </div>
    <% } %>

  </main>

  <%- include("../partials/footer") %>
</body>
</html>
