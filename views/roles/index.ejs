<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Rôles - Gestion</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include("../partials/header") %>

  <main class="max-w-7xl mx-auto px-4 py-8">

    <!-- En-tête -->
    <div class="mb-8 flex flex-col md:flex-row md:items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Gestion des rôles</h1>
        <p class="text-gray-600 mt-1">Liste des rôles disponibles dans le système</p>
      </div>

      <a href="/front/roles/create"
         class="mt-4 md:mt-0 inline-flex items-center bg-green-600 text-white px-5 py-2.5 rounded-lg hover:bg-green-700 transition">
        <i class="fas fa-plus mr-2"></i> Nouveau rôle
      </a>
    </div>

    <!-- Erreur -->
    <% if (error) { %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-700"><%= error %></p>
      </div>
    <% } %>

    <!-- Tableau -->
    <div class="bg-white rounded-xl shadow border border-gray-200 overflow-hidden">
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">ID</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Nom du rôle</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
            </tr>
          </thead>

          <tbody class="bg-white divide-y divide-gray-200">

            <% if (!Array.isArray(roles) || roles.length === 0) { %>
              <tr>
                <td colspan="3" class="px-6 py-12 text-center text-gray-500">
                  <p>Aucun rôle trouvé</p>
                </td>
              </tr>
            <% } else { %>

              <% roles.forEach(r => { %>
                <tr class="hover:bg-gray-50 transition">

                  <!-- ID -->
                  <td class="px-6 py-4 text-sm font-medium text-gray-900">
                    #<%= r.idRole || r.id || "--" %>
                  </td>

                  <!-- Nom -->
                  <td class="px-6 py-4 text-sm text-gray-700">
                    <%= r.nom || r.nomRole || "Non défini" %>
                  </td>

                  <!-- Actions -->
                  <td class="px-6 py-4 text-sm font-medium">
                    <div class="flex items-center space-x-4">

                      <a href="/front/roles/<%= r.idRole || r.id %>"
                         class="text-blue-600 hover:text-blue-800">
                        Voir
                      </a>

                      <a href="/front/roles/<%= r.idRole || r.id %>/edit"
                         class="text-green-600 hover:text-green-800">
                        Modifier
                      </a>

                      <form action="/front/roles/<%= r.idRole || r.id %>/delete"
                            method="POST"
                            onsubmit="return confirm('Supprimer ce rôle ?');"
                            class="inline">
                        <button type="submit" class="text-red-600 hover:text-red-800">
                          Supprimer
                        </button>
                      </form>

                    </div>
                  </td>

                </tr>
              <% }) %>

            <% } %>

          </tbody>
        </table>
      </div>
    </div>

  </main>

  <%- include("../partials/footer") %>
</body>
</html>
