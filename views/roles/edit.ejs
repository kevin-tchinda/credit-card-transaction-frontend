<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Modifier un rôle</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include("../partials/header") %>

  <main class="max-w-3xl mx-auto px-4 py-8">

    <!-- En-tête -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Modifier le rôle</h1>
        <p class="text-gray-600 mt-1">Mise à jour des informations du rôle</p>
      </div>

      <a href="/front/roles"
         class="inline-flex items-center bg-gray-600 text-white px-5 py-2.5 rounded-lg hover:bg-gray-700 transition">
        <i class="fas fa-arrow-left mr-2"></i> Retour
      </a>
    </div>

    <!-- Erreur -->
    <% if (error) { %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-700"><%= error %></p>
      </div>
    <% } %>

    <!-- Formulaire -->
    <% if (role) { %>
      <div class="bg-white rounded-xl shadow border border-gray-200 p-6">

        <form action="/front/roles/<%= role.idRole || role.id %>/edit" method="POST" class="space-y-6">

          <!-- Nom du rôle -->
          <div>
            <label class="block text-sm font-medium text-gray-700 mb-1">
              Nom du rôle
            </label>
            <input type="text"
                   name="nom"
                   value="<%= role.nom || role.nomRole || '' %>"
                   required
                   class="w-full border border-gray-300 rounded-lg px-3 py-2 focus:ring focus:ring-green-200 focus:border-green-500">
          </div>

          <!-- Actions -->
          <div class="pt-6 border-t flex justify-end space-x-4">
            <a href="/front/roles"
               class="px-5 py-2.5 rounded-lg border border-gray-300 text-gray-700 hover:bg-gray-100 transition">
              Annuler
            </a>

            <button type="submit"
                    class="px-5 py-2.5 rounded-lg bg-green-600 text-white hover:bg-green-700 transition">
              Enregistrer
            </button>
          </div>

        </form>

      </div>
    <% } %>

  </main>

  <%- include("../partials/footer") %>
</body>
</html>
