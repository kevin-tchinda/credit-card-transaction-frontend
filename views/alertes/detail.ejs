<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Détail de l’alerte</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
  <%- include("../partials/header") %>

  <main class="max-w-4xl mx-auto px-4 py-8">

    <!-- En-tête -->
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-800">Détail de l’alerte</h1>
        <p class="text-gray-600 mt-1">Informations complètes sur l’alerte détectée</p>
      </div>

      <a href="/front/alertes"
         class="inline-flex items-center bg-gray-600 text-white px-5 py-2.5 rounded-lg hover:bg-gray-700 transition">
        <i class="fas fa-arrow-left mr-2"></i> Retour
      </a>
    </div>

    <!-- Erreur -->
    <% if (error) { %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-700"><%= error %></p>
      </div>
    <% } %>

    <!-- Carte détail -->
    <% if (alerte) { %>
      <div class="bg-white rounded-xl shadow border border-gray-200 p-6 space-y-4">

        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">

          <div>
            <p class="text-sm text-gray-500">ID Alerte</p>
            <p class="text-lg font-medium text-gray-800">#<%= alerte.idAlerte || "--" %></p>
          </div>

          <div>
            <p class="text-sm text-gray-500">ID Analyse</p>
            <p class="text-lg font-medium text-gray-800"><%= alerte.idAnalyse || "--" %></p>
          </div>

          <div>
            <p class="text-sm text-gray-500">Niveau</p>
            <p class="text-lg font-medium text-red-600">
              <%= alerte.niveau || "Non défini" %>
            </p>
          </div>

          <div>
            <p class="text-sm text-gray-500">Date de création</p>
            <p class="text-lg font-medium text-gray-800">
              <%= alerte.dateCreation ? new Date(alerte.dateCreation).toLocaleString("fr-FR") : "--" %>
            </p>
          </div>

        </div>

        <div class="pt-4 border-t">
          <p class="text-sm text-gray-500 mb-1">Message</p>
          <p class="text-gray-800"><%= alerte.message || "Aucun message disponible" %></p>
        </div>

      </div>
    <% } %>

  </main>

  <%- include("../partials/footer") %>
</body>
</html>
