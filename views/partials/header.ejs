<header class="bg-white border-b">
  <div class="max-w-6xl mx-auto px-4">
    <div class="flex justify-between items-center h-14">

      <!-- Logo -->
      <a href="/front" class="flex items-center space-x-3">
        <div class="w-8 h-8 bg-gray-800 rounded flex items-center justify-center">
          <i class="fas fa-shield-alt text-white text-sm"></i>
        </div>
        <span class="font-semibold text-gray-800">Projet Final</span>
      </a>

      <!-- Bouton menu mobile -->
      <button id="menuBtn" class="md:hidden text-gray-600 focus:outline-none">
        <i class="fas fa-bars text-xl"></i>
      </button>

      <!-- Navigation desktop -->
      <nav class="hidden md:flex items-center space-x-6">
        <a href="/front" class="text-gray-600 hover:text-gray-900 text-sm">Accueil</a>
        <a href="/front/dashboard" class="text-gray-600 hover:text-gray-900 text-sm">Dashboard</a>
        <a href="/front/transactions" class="text-gray-600 hover:text-gray-900 text-sm">Transactions</a>
        <a href="/front/analyses" class="text-gray-600 hover:text-gray-900 text-sm">Analyses</a>
        <a href="/front/roles" class="text-gray-600 hover:text-gray-900 text-sm">Roles</a>
        <a href="/front/utilisateurs" class="text-gray-600 hover:text-gray-900 text-sm">Utilisateurs</a>
      </nav>

      <!-- Alertes (inchangé) -->
      <a href="/front/alertes" class="hidden md:inline text-red-600 hover:text-red-800 text-sm font-medium">
        <i class="fas fa-bell mr-1"></i>Alertes
      </a>

      <!-- Auth desktop -->
      <div class="hidden md:flex items-center space-x-4">
        <% if (isAuthenticated && user) { %>
          <span class="text-sm text-gray-600"><%= user.email %></span>
          <a href="/front/logout" class="text-sm text-red-600 hover:text-red-800">
            <i class="fas fa-sign-out-alt mr-1"></i>Déconnexion
          </a>
        <% } else { %>
          <a href="/front/login" class="text-sm text-gray-600 hover:text-gray-900">Connexion</a>
          <a href="/front/signup" class="bg-gray-800 text-white text-sm px-3 py-1.5 rounded hover:bg-gray-900">
            Inscription
          </a>
        <% } %>
      </div>

    </div>

    <!-- Menu mobile -->
    <div id="mobileMenu" class="hidden md:hidden py-4 border-t mt-2 space-y-3">

      <a href="/front" class="block text-gray-600 hover:text-gray-900 text-sm">Accueil</a>
      <a href="/front/dashboard" class="block text-gray-600 hover:text-gray-900 text-sm">Dashboard</a>
      <a href="/front/transactions" class="block text-gray-600 hover:text-gray-900 text-sm">Transactions</a>
      <a href="/front/analyses" class="block text-gray-600 hover:text-gray-900 text-sm">Analyses</a>
      <a href="/front/roles" class="block text-gray-600 hover:text-gray-900 text-sm">Roles</a>
      <a href="/front/utilisateurs" class="block text-gray-600 hover:text-gray-900 text-sm">Utilisateurs</a>

      <!-- Alertes mobile (même style) -->
      <a href="/front/alertes" class="block text-red-600 hover:text-red-800 text-sm font-medium">
        <i class="fas fa-bell mr-1"></i>Alertes
      </a>

      <!-- Auth mobile -->
      <% if (isAuthenticated && user) { %>
        <span class="block text-sm text-gray-600"><%= user.email %></span>
        <a href="/front/logout" class="block text-sm text-red-600 hover:text-red-800">
          Déconnexion
        </a>
      <% } else { %>
        <a href="/front/login" class="block text-sm text-gray-600 hover:text-gray-900">Connexion</a>
        <a href="/front/signup" class="block text-sm bg-gray-800 text-white px-3 py-1.5 rounded hover:bg-gray-900 w-fit">
          Inscription
        </a>
      <% } %>

    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById("menuBtn");
  const mobileMenu = document.getElementById("mobileMenu");

  menuBtn.addEventListener("click", () => {
    mobileMenu.classList.toggle("hidden");
  });
</script>
