<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Détail de l’analyse</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">

  <%- include("../partials/header") %>

  <main class="max-w-4xl mx-auto px-4 py-10">

    <!-- En-tête -->
    <div class="mb-8">
      <h1 class="text-2xl font-bold text-gray-800 mb-1">Détail de l’analyse</h1>
      <p class="text-gray-600">Informations complètes sur cette analyse de fraude</p>
    </div>

    <!-- Erreur -->
    <% if (error) { %>
      <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
        <p class="text-red-700">
          <i class="fas fa-exclamation-circle mr-2"></i><%= error %>
        </p>
      </div>
    <% } else { %>

      <!-- Carte détail -->
      <div class="bg-white rounded-xl shadow border border-gray-200 p-6 space-y-4">

        <div class="flex items-center justify-between border-b pb-4">
          <h2 class="text-lg font-semibold text-gray-800">
            Analyse #<%= analyse.idAnalyse %>
          </h2>

          <% if (analyse.isFraude) { %>
            <span class="inline-flex items-center px-3 py-1 text-xs font-medium bg-red-100 text-red-800 rounded-full">
              <i class="fas fa-times-circle mr-1"></i> Frauduleuse
            </span>
          <% } else { %>
            <span class="inline-flex items-center px-3 py-1 text-xs font-medium bg-green-100 text-green-800 rounded-full">
              <i class="fas fa-check-circle mr-1"></i> Normale
            </span>
          <% } %>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

          <!-- ID Transaction -->
          <div>
            <p class="text-sm text-gray-500 mb-1">ID Transaction</p>
            <p class="text-gray-800 font-medium">
              <i class="fas fa-exchange-alt mr-2 text-gray-400"></i>
              <%= analyse.idTransaction %>
            </p>
          </div>

          <!-- Probabilité -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Probabilité de fraude</p>
            <p class="text-gray-800 font-medium">
              <i class="fas fa-chart-line mr-2 text-gray-400"></i>
              <%= analyse.probabiliteFraude %> %
            </p>
          </div>

          <!-- Décision -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Décision</p>
            <p class="text-gray-800 font-medium">
              <i class="fas fa-shield-alt mr-2 text-gray-400"></i>
              <%= analyse.isFraude ? "Frauduleuse" : "Normale" %>
            </p>
          </div>

          <!-- Date -->
          <div>
            <p class="text-sm text-gray-500 mb-1">Date de l’analyse</p>
            <p class="text-gray-800 font-medium">
              <i class="fas fa-calendar mr-2 text-gray-400"></i>
              <%= new Date(analyse.dateAnalyse).toLocaleString("fr-FR") %>
            </p>
          </div>

        </div>
      </div>

    <% } %>

    <!-- Boutons -->
    <div class="mt-8 flex justify-between">
      <a href="/front/analyses"
         class="inline-flex items-center px-5 py-2.5 border border-gray-300 rounded-lg hover:bg-gray-100 text-gray-700">
        <i class="fas fa-arrow-left mr-2"></i> Retour à la liste
      </a>

      <a href="/front/dashboard"
         class="inline-flex items-center px-5 py-2.5 bg-blue-600 text-white rounded-lg hover:bg-blue-700">
        <i class="fas fa-tachometer-alt mr-2"></i> Dashboard
      </a>
    </div>

  </main>

  <%- include("../partials/footer") %>

</body>
</html>
